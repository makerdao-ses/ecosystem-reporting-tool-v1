{
  "name": "budgettool",
  "version": "1.4.0",
  "description": "Get monthly actuals in MD, JSON format and push to Ecosystem Performance Api",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "webpack --config webpack.common.js --watch",
    "build": "webpack --config webpack.prod.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "make:linux": "electron-builder --linux",
    "make:macos": "electron-builder --mac",
    "make:win": "electron-builder --win --x64"
  },
  "author": "liberuum <liberuum@ses.makerdao.network>",
  "license": "ISC",
  "build": {
    "productName": "Budget-Tool",
    "appId": "com.liberuum.budgetTool",
    "files": [
      "build/**/*",
      "assets/**/*",
      "utils/**/*",
      "index.html",
      "splash.html",
      "splash.css",
      "main.js",
      "preload.js",
      "auth.js"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/images/budgetToolLogo.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        "dmg"
      ],
      "artifactName": "Budget-Tool-${version}-mac.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 420,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "assets/images/budgetToolLogo.png",
      "target": [
        "nsis"
      ],
      "artifactName": "Budget-Tool-Setup-${version}-win.${ext}"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development",
      "artifactName": "Budget-Tool-${version}-linux.${ext}"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "electron": "^21.2.0",
    "electron-builder": "^23.6.0",
    "electron-reload": "^2.0.0-alpha.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "@makerdao/dai-ui-theme-maker": "^0.0.66",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "electron-settings": "^4.0.2",
    "express": "^4.18.2",
    "googleapis": "^108.0.1",
    "graphql": "^16.6.0",
    "jwt-decode": "^3.1.2",
    "mustache": "^4.2.0",
    "notistack": "^2.0.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.0",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.2.1",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1",
    "remark-gfm": "^3.0.1",
    "style-loader": "^3.3.1",
    "theme-ui": "^0.15.3",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
